<Project>
  <PropertyGroup>
    <VersionPrefix>0.0.4</VersionPrefix>
  </PropertyGroup>
  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <IsPackable>false</IsPackable>
  </PropertyGroup>
  <PropertyGroup>
    <Product>FkThat.Templates</Product>
    <Company>FkThat</Company>
    <Copyright>Â© FkThat, 2023</Copyright>
    <Authors>FkThat</Authors>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/fkthat/Templates</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/fkthat/Templates</PackageProjectUrl>
    <Description>FkThat's dotnet CLI templates.</Description>
    <PackageTags>dotnet;cli;c#;templates</PackageTags>
    <PackageReleaseNotes>@(ReleaseNotes, '%0a')</PackageReleaseNotes>
  </PropertyGroup>
  <Target Name="PreparePackageReleaseNotesFromFile" BeforeTargets="GenerateNuspec"
    Condition="Exists('$(MSBuildProjectDir)RELEASE-NOTES')">
    <ReadLinesFromFile File="$(MSBuildProjectDir)RELEASE-NOTES" >
      <Output TaskParameter="Lines" ItemName="ReleaseNotes"/>
    </ReadLinesFromFile>
  </Target>
</Project>
