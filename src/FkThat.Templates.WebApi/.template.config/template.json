{
  "$schema": "http://json.schemastore.org/template",
  "author": "FkThat",
  "classifications": [ "FkThat" ],
  "identity": "FkThat.Templates.WebApi",
  "name": "FkThat ASP.NET Core WebApi",
  "shortName": "ft-webapi",
  "tags": { "language": "C#", "type": "project" },
  "sourceName": "FkThat.Templates.WebApi",
  "sources": [
    {
      "source": "./",
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        ".template.config/**/*",
        "**/*.filelist",
        "**/*.user",
        "**/*.lock.json",
        "**/log/**"
      ]
    }
  ],
  "symbols": {
    "target-framework": {
        "description": ".NET framework version to target",
        "type": "parameter",
        "datatype": "choice",
        "choices": [{
            "choice": "31",
            "description": "Target .NET Core 3.1"
          },{
            "choice": "50",
            "description": "Target .NET Core 3.1"
          }],
        "isRequired": false,
        "defaultValue": "50"
    },
    "HttpPort": {
      "type": "generated",
      "generator": "port",
      "replaces": "5000"
    },
    "HttpsPort": {
      "type": "generated",
      "generator": "port",
      "replaces": "5001"
    }
  }
}
