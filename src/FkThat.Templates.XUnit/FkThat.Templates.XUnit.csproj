<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <!--#if(target-framework == '31')-->
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <!--#endif-->
    <!--#if(target-framework == '50')-->
    <TargetFramework>net5.0</TargetFramework>
    <!--#endif-->
    <IsPackable>false</IsPackable>
    <!--#if(target-project != '')-->
    <RootNamespace>__TargetProject</RootNamespace>
    <!--#endif-->
    <Nullable>enable</Nullable>
    <NoWarn>CA1062;$(NoWarn)</NoWarn>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.7.1" />
    <PackageReference Include="xunit" Version="2.4.1" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="FluentAssertions" Version="5.10.3" />
    <!--#if(mock == 'moq')-->
    <PackageReference Include="Moq" Version="4.14.7" />
    <PackageReference Include="Moq.AutoMock" Version="2.1.0" />
    <!--#endif-->
    <!--#if(mock == 'fakeiteasy')-->
    <PackageReference Include="FakeItEasy" Version="6.2.1" />
    <PackageReference Include="FakeItEasy.AutoFake" Version="3.0.0" />
    <!--#endif-->
    <PackageReference Include="coverlet.msbuild" Version="2.9.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
  <PropertyGroup>
    <CollectCoverage>true</CollectCoverage>
    <CoverletOutputFormat>cobertura</CoverletOutputFormat>
    <!--#if(target-project != '')-->
    <Include>[__TargetProject]*</Include>
    <!--#endif-->
    <Exclude>[*]*.Program,[*]*.Startup</Exclude>
    <ExcludeByAttribute>Obsolete,GeneratedCodeAttribute,CompilerGeneratedAttribute</ExcludeByAttribute>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="coverage.cobertura.xml" />
  </ItemGroup>
</Project>
