{
  "$schema": "http://json.schemastore.org/template",
  "author": "FkThat",
  "classifications": [
    "FkThat"
  ],
  "identity": "FkThat.Templates.Item",
  "name": "FkThat C# item",
  "shortName": "ft-item",
  "tags": {
    "language": "C#",
    "type": "item"
  },
  "sourceName": "TheItem",
  "symbols": {
    "namespace": {
      "description": "The item namespace",
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "defaultValue": "",
      "replaces": "__namespace"
    },
    "visibility": {
      "description": "The item access modifier",
      "type": "parameter",
      "datatype": "choice",
      "isRequired": false,
      "defaultValue": "public",
      "replaces": "__visibility",
      "choices": [
        {
          "choice": "public",
          "description": "The item is public"
        },
        {
          "choice": "internal",
          "description": "The item is internal"
        }
      ]
    },
    "template": {
      "description": "The item type",
      "type": "parameter",
      "datatype": "choice",
      "isRequired": false,
      "defaultValue": "class",
      "choices": [
        {
          "choice": "class",
          "description": "Class"
        },
        {
          "choice": "interface",
          "description": "Interface"
        },
        {
          "choice": "enum",
          "description": "Enumeration"
        },
        {
          "choice": "controller",
          "description": "MVC Controller"
        },
        {
          "choice": "worker",
          "description": "Background worker"
        }
      ]
    },
    "static": {
      "description": "The item is static",
      "type": "parameter",
      "datatype": "bool"
    },
    "IS_CLASS": {
      "type": "computed",
      "value": "(template == \"class\")"
    },
    "IS_INTERFACE": {
      "type": "computed",
      "value": "(template == \"interface\")"
    },
    "IS_ENUM": {
      "type": "computed",
      "value": "(template == \"enum\")"
    },
    "IS_CONTROLLER": {
      "type": "computed",
      "value": "(template == \"controller\")"
    },
    "IS_WORKER": {
      "type": "computed",
      "value": "(template == \"worker\")"
    },
    "IS_PUBLIC": {
      "type": "computed",
      "value": "(visibility == \"public\")"
    },
    "IS_STATIC": {
      "type": "computed",
      "value": "(static ?? \" static\" : \"\")",
      "replaces": "__static"
    }
  }
}
